<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PasswordChange"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/back"
        android:background="#000"
        android:src="@drawable/ic_left_black_24dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        />

    <ImageView
        android:id="@+id/image"
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/forgot"
        />

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/heading"
        android:layout_gravity="center"
        android:textColor="#494e57"
        android:textAlignment="center"
        android:textSize="25sp"
        android:text="Changing Password ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text"
        android:layout_gravity="center"
        android:textColor="#494e57"
        android:textAlignment="center"
        android:textSize="15sp"
        android:text="Enter your old password and new Password."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <com.maksim88.passwordedittext.PasswordEditText
        android:id="@+id/oldpassword"
        android:padding="5dp"
        android:background="@color/white"
        android:drawablePadding="5dp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:hint="Old Password"
        android:textColor="#000"
        android:textColorHint="#494e57"
        android:inputType="textEmailAddress"
        app:pet_iconHide="@drawable/ic_remove_red_eye_black_24dp"
        app:pet_iconShow="@drawable/ic_remove_red_eye_black_24dp"
        />

    <com.maksim88.passwordedittext.PasswordEditText
        android:id="@+id/newpassword"
        android:padding="5dp"
        android:background="@color/white"
        android:drawablePadding="5dp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:hint="New Password"
        android:textColor="#000"
        android:textColorHint="#494e57"
        android:inputType="textEmailAddress"
        app:pet_iconHide="@drawable/ic_remove_red_eye_black_24dp"
        app:pet_iconShow="@drawable/ic_remove_red_eye_black_24dp"
        />

    <Button
        android:gravity="center"
        android:background="#303f9f"
        android:id="@+id/change"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Change Password"
        android:layout_width="250dp"
        android:layout_height="50dp"
        />



</LinearLayout>